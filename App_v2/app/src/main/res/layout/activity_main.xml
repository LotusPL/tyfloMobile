<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kkasprzyk.app_v2.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/frenchLanguageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_column="2"
                android:layout_row="0"
                android:text="French"
                tools:layout_editor_absoluteX="280dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/frenchImageButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_below="@+id/ukImageButton"
                android:layout_centerHorizontal="true"
                android:layout_column="2"
                android:layout_row="1"
                app:srcCompat="@drawable/french"
                tools:layout_editor_absoluteX="280dp"
                tools:layout_editor_absoluteY="64dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/englishLanguageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/frenchLanguageButton"
                android:layout_alignBottom="@+id/frenchLanguageButton"
                android:layout_alignStart="@+id/germanImageButton"
                android:layout_column="0"
                android:layout_row="0"
                android:text="English"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/ukImageButton"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_alignStart="@+id/englishLanguageButton"
                android:layout_below="@+id/englishLanguageButton"
                android:layout_column="0"
                android:layout_row="1"
                app:srcCompat="@drawable/uk"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="64dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/germanLanguageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/englishLanguageButton"
                android:layout_alignBottom="@+id/englishLanguageButton"
                android:layout_alignStart="@+id/frenchImageButton"
                android:layout_column="1"
                android:layout_row="0"
                android:text="German"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/germanImageButton"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/frenchImageButton"
                android:layout_column="1"
                android:layout_row="1"
                app:srcCompat="@drawable/germany"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="64dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/language"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="21"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="478dp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
